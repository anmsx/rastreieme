<div class="container_12 clearfix">
	<section class="portlet grid_12"> 
	    <header>
	        <h2>Alterar senha</h2> 
	    </header>
	    <section>
			<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :class => 'form', :html => { :method => :put }) do |f| %>
		  		<%= f.hidden_field :reset_password_token %>

				<% if devise_error_messages!.size > 0 -%>
				<div class="clearfix">
					<div class='message error closeable'>
						<span class="message-close"></span>
						<%= devise_error_messages! %>
					</div>
				</div>
				<% end -%>

				<div>
					<%= f.label :password, 'Nova senha', :class => 'form-label' %>
					<div class="form-input">
						<%= f.password_field :password %>
					</div>
				</div>

				<br />

				<div>
					<%= f.label :password_confirmation, 'Confirme a nova senha', :class => 'form-label' %>
					<div class="form-input">
						<%= f.password_field :password_confirmation %>
					</div>
				</div>

				<br />

				<div>
					<div class="form-input">
						<%= f.submit "Enviar" %>
					</div>
				</div>
			<% end %>

			<br />

			<div><%= render "links" %></div>

		</section>
	</section>
</div>
