<div class="container_12 clearfix">
	<section class="portlet grid_12"> 
	    <header>
	        <h2>Efetuar login</h2> 
	    </header>
	    <section>
			<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
			  <h3>
				Ainda não é cadastrado ? <%= link_to "Cadastre-se", new_registration_path(resource_name) %>
			  </h3>
			<% end -%>
			<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :class => 'form') do |f| %>

				<% if devise_error_messages!.size > 0 -%>
				<div class="clearfix">
					<div class='message error closeable'>
						<span class="message-close"></span>
						<%= devise_error_messages! %>
					</div>
				</div>
				<% end -%>

				<div>
					<%= f.label :email, :class => 'form-label' %>
					<div class="form-input">
						<%= f.email_field :email %>
					</div>
				</div>

				<br />

				<div>
					<%= f.label :password, 'Senha', :class => 'form-label' %>
					<div class="form-input">
						<%= f.password_field :password %>
					</div>
				</div>

				<% if devise_mapping.rememberable? -%>
				<div class="clearfix"><br /></div>
				<div class="clearfix">
					<div class="form-input">
					    <div><%= f.check_box :remember_me %> <%= f.label :remember_me, 'Lembrar por vários dias...' %></div>
					</div>
				</div>
			  	<% end -%>

				<br />

				<div>
					<div class="form-input">
						<%= f.submit "Enviar" %>
					</div>
				</div>
			<% end %>

			<br />

			<div><%= render "links" %></div>

		</section>
	</section>
</div>