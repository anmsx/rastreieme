<div class="container_12 clearfix leading">
	<section class="portlet grid_12 leading"> 
	    <header>
	        <h2>Ocorrências</h2> 
	    </header>
	    <section>

		<% if !@occurrences.nil? && @occurrences.status.count > 0%>
		<% Hash.from_xml(@occurrences.to_xml).to_json %>
		<table class="full">
			<thead>
				<tr>
					<td>Data</td>
					<td>Local</td>
					<td>Situação</td>
					<td>Detalhes</td>
				</tr>
			</thead>
			<tbody>
				<% @occurrences.status.each do |tn|%>
				<tr>
					<td><%= tn.data%></td>
					<td><%= tn.local%></td>
					<td><%= tn.situacao%></td>
					<td><%= tn.detalhes%></td>
				</tr>
				<% end %>
			</tbody> 
		</table>
		<% else %>
			<h5> Nenhuma ocorrência encontrada!</h5>
		<% end %>
		</section>
	</section>
</div>
